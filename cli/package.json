{
  "name": "zcam-cli",
  "version": "1.0.0",
  "description": "Z CAM Camera Control CLI - 官方命令行控制工具",
  "main": "src/index.js",
  "bin": {
    "zcam": "./bin/zcam"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "format:check": "prettier --check src/ tests/",
    "build": "babel src -d lib",
    "prepublishOnly": "npm run build && npm test",
    "release": "standard-version",
    "docs:build": "jsdoc -c jsdoc.conf.json",
    "prepare": "husky install"
  },
  "keywords": [
    "zcam",
    "camera",
    "cli",
    "ptz",
    "streaming",
    "rtmp",
    "srt",
    "ndi",
    "recording",
    "video",
    "live-streaming",
    "broadcast"
  ],
  "author": {
    "name": "Z CAM CLI Team",
    "email": "support@zcam.com",
    "url": "https://www.zcam.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zcam/zcam-cli.git"
  },
  "bugs": {
    "url": "https://github.com/zcam/zcam-cli/issues"
  },
  "homepage": "https://github.com/zcam/zcam-cli#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "commander": "^9.4.1",
    "cli-table3": "^0.6.3",
    "ini": "^3.0.1",
    "chalk": "^4.1.2",
    "node-fetch": "^2.6.7",
    "ora": "^5.4.1",
    "inquirer": "^8.2.5",
    "lodash": "^4.17.21",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "eslint": "^8.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "standard-version": "^9.5.0",
    "jsdoc": "^3.6.11"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/index.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "14"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  },
  "files": [
    "bin/",
    "lib/",
    "src/",
    "docs/",
    "README.md",
    "LICENSE"
  ]
}